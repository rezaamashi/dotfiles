# -*- mode:sh; -*-

# Varibles
USER=muna
HOME=/home/${USER}
XDG_RUNTIME_DIR=/run/user/1000
EMACS_ICON_PATH=/usr/share/icons/hicolor/16x16/apps/emacs.png

# Additional command line arguments for emacs(1).
#CHEMACS_PROFILE='doom'
CHEMACS_PROFILE="capture"
CHEMACS_COMMAND="--with-profile=${CHEMACS_PROFILE}"
OPTS="${CHEMACS_COMMAND} --fg-daemon=${XDG_RUNTIME_DIR}/emacs/capture"

# Setting this to 1 enables logging, any other value - disables.
LOGGING_ENABLE=1
# The directory will be created for you, if logging is enabled.
LOG_DIR="$HOME/.cache/log/captured"
